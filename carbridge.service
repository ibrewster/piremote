[Unit]
Description=HomeBridge/RF to MQTT bridge
After=network.target auditd.service

[Service]
ExecStartPre=+python3 /home/israel/HomeLinkBridge/setupLogDir.py
ExecStart=/home/israel/HomeLinkBridge/venv/bin/python /home/israel/HomeLinkBridge/RunFastWSGI.py
Restart=on-failure
WorkingDirectory=/home/israel/HomeLinkBridge
User=israel
Group=israel
StandardOutput=journal
StandardError=journal
SyslogIdentifier=RF2MQTT

[Install]
WantedBy=multi-user.target

